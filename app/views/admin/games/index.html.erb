<section id="admin">
  <%= link_to 'Main', admin_admin_main_path %>
  <hr>
  <p id="notice"><%= notice %></p>

  <h3>Games</h3>

  <p><%= link_to 'New Game', new_admin_game_path %></p>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Category1</th>
        <th>Category2</th>
        <th>Category3</th>
        <th>Type</th>
        <th colspan="3">Operation</th>
      </tr>
    </thead>

    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.id %></td>
          <td><%= game.title %></td>
          <td><%= hashed_categories[game.category1] %></td>
          <td><%= hashed_categories[game.category2] %></td>
          <td><%= hashed_categories[game.category3] %></td>
          <td><%= hashed_game_type[game.gtype] %></td>
          <td><%= link_to 'Show', [:admin, game] %></td>
          <td><%= link_to 'Edit', edit_admin_game_path(game) %></td>
          <td><%= link_to 'Destroy', [:admin, game], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
